{
	env: {
		browser: true,
		es6: true,
		node: true
	},
	plugins: ['react', '@emotion'],
	parserOptions: {
		ecmaVersion: 2018,
		sourceType: 'module'
	},
	rules: {
		'react/react-in-jsx-scope': 'off',
		'no-unused-vars': [
			error,
			{
				argsIgnorePattern: '_'
			}
		],
		'react/display-name': 'off',
		'react/prop-types': 0
	},
	extends: [
		'next/core-web-vitals',
		'prettier',
	],
	settings: {
		react: {
			version: 'detect'
		}
	}
}
